<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create User</title>
    <link rel="stylesheet" href="./CSS/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 px-5 py-10 text-white">
        <div class="nav my-5">
            <a class="px-2 py-2 text-blue-500 text-xl" href="/read">Read</a>
        </div>
      <h1 class="text-3xl font-bold">Create User</h1>
      <form action="/create" method="POST" class="p-8">
        <input
          class="px-5 py-2 rounded bg-zinc-800 border-2 border-gray-500 outline-none mx-5 font-bold"
          type="text"
          placeholder="Name"
          name="name"
        />
        <input
          class="px-5 py-2 rounded bg-zinc-800 border-2 border-gray-500 outline-none mx-5 font-bold"
          type="text"
          placeholder="Email"
          name="email"
        />
        <input
          class="px-5 py-2 rounded bg-zinc-800 border-2 border-gray-500 outline-none mx-5 font-bold"
          type="text"
          placeholder="Image Url"
          name="imageurl"
        />
        <input
          class="px-5 py-2 rounded-lg bg-blue-500 mx-5 font-bold"
          type="submit"
          value="Create User"
        />
      </form>
    </div>
  </body>
</html>
